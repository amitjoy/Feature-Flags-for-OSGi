<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.1.0" localization="en_us"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.osgi.org/xmlns/metatype/v1.1.0">
          
    <OCD id="com.amitinside.featureflags.feature.group"
         name="Feature Group"
         description="Allows for the definition of statically configured feature groups which are defined and enabled through OSGi configuration">

        <AD id="name"
            name="Name"
            type="String"
            cardinality="0"
            required="true"
            default="MyFeatureGroup"
            description="Short friendly name of this feature group" />

        <AD id="description"
            name="Description"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="Description of this feature group" />
        
        <AD id="strategy"
            name="Strategy"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="Strategy ID of this feature group to check if the feature group is enabled or not by this configuration" />
        
        <AD id="enabled"
            name="Enabled"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="Boolean flag indicating whether this feature group is enabled or not by this configuration" />
        
    </OCD>
    
    <Designate pid="com.amitinside.featureflags.feature.group" factoryPid="com.amitinside.featureflags.feature.group">
        <Object ocdref="com.amitinside.featureflags.feature.group"/>
    </Designate>
    
</MetaData>
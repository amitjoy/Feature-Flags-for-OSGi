<?xml version="1.0" encoding="UTF-8"?>
<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.1.0" localization="en_us"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.osgi.org/xmlns/metatype/v1.1.0">
          
    <OCD id="com.amitinside.featureflags.feature"
         name="Feature"
         description="Allows for the definition of statically configured features which are defined and enabled through OSGi configuration">

        <AD id="name"
            name="Name"
            type="String"
            cardinality="0"
            required="true"
            default="MyFeature"
            description="Short name of this feature" />

        <AD id="description"
            name="Description"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="Description for the feature" />
        
        <AD id="enabled"
            name="isEnabled"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="Boolean flag indicating whether the feature is enabled or not by this configuration" />
        
    </OCD>
    
    <Designate pid="com.amitinside.featureflags.feature" factoryPid="com.amitinside.featureflags.feature">
        <Object ocdref="com.amitinside.featureflags.feature"/>
    </Designate>
    
</MetaData>
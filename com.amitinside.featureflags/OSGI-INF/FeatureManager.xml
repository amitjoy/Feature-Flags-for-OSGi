<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="FeatureManager">
   <service>
      <provide interface="com.amitinside.featureflags.FeatureService"/>
   </service>
   <reference bind="bindFeature" cardinality="0..n" interface="com.amitinside.featureflags.feature.Feature" name="Feature" policy="dynamic" unbind="unbindFeature"/>
   <reference bind="bindStrategy" cardinality="0..n" interface="com.amitinside.featureflags.strategy.ActivationStrategy" name="Strategy" policy="dynamic" unbind="unbindStrategy"/>
   <implementation class="com.amitinside.featureflags.internal.FeatureManager"/>
</scr:component>
<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.1.0" localization="en_us"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.osgi.org/xmlns/metatype/v1.1.0">
          
    <OCD id="com.amitinside.featureflags.strategy.service.property"
         name="Service Property Activation Strategy"
         description="Allows for the definition of statically configured service property strategy which are defined and enabled through OSGi configuration">

        <AD id="name"
            name="Name"
            type="String"
            cardinality="0"
            required="true"
            default="MyStrategy"
            description="Short friendly name of this strategy" />

        <AD id="description"
            name="Description"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="Description of this strategy" />
        
        <AD id="property_key"
            name="Property Key"
            type="String"
            cardinality="0"
            required="true"
            default=""
            description="Property Key to check in the associated feature or feature group's service properties" />
        
        <AD id="property_value"
            name="Property Value"
            type="String"
            cardinality="0"
            required="true"
            default=""
            description="Property Value to check in the associated feature or feature group's service properties" />
        
    </OCD>
    
    <Designate pid="com.amitinside.featureflags.strategy.service.property" factoryPid="com.amitinside.featureflags.strategy.service.property">
        <Object ocdref="com.amitinside.featureflags.strategy.service.property"/>
    </Designate>
    
</MetaData>